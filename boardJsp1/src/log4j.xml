<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">  
	
	 <!-- 콘솔 로그 -->  
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <!-- 패턴 레이아웃 설정.. -->  
        <layout class="org.apache.log4j.PatternLayout">  
            <param name="ConversionPattern" value="[%c{1}] > [%d{yyyy-MM-dd HH:mm:ss}][%L][%p] %m %n"/>  
        </layout>  
    </appender>
	
    <logger name="com.common" additivity="false">
        <level value="DEBUG" />
        <appender-ref ref="console" />
    </logger>
    
    <logger name="com.board.controller" additivity="false">
        <level value="INFO" />
        <appender-ref ref="console" />
    </logger>
    
    <appender name="dailyout" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="/logs/daily.log" />
		<param name="Append" value="true" />
		<param name="DatePattern" value="'.'yyMMdd-hhmmss" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%t> [%d{yyyy-MM-dd HH:mm:ss}] [%c{1}] [%L] [%p] %m %n"/>
		</layout>
		
		<rollingPolicy class="org.apache.log4j.rolling.FixedWindowRollingPolicy">
			<param name="maxFileSize" value="100"/>
		</rollingPolicy>
		
	</appender>
	
	<root>
		<level value="DEBUG" />
		<appender-ref ref="console" />
		<appender-ref ref="dailyout" />
	</root>
    
</log4j:configuration>